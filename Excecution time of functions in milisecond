using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Timers;

namespace ConsoleApplication4
{
    class Program
    {
        static void Main(string[] args)
        {

            int[] profit = new int[] { 1, 5, 8, 9, 10, 17, 17, 20, 24, 30 };
            
            var watch = System.Diagnostics.Stopwatch.StartNew();
            int result = CutRod(profit, profit.Length);
            watch.Stop();
            var CutRodMs = watch.ElapsedMilliseconds;
            Console.WriteLine("Optimal Solution is:{0}", result);
            Console.WriteLine("The time required for CutRod function is : {0} milliseconds", CutRodMs);

            var watch1 = System.Diagnostics.Stopwatch.StartNew();
            int result1 = MemoizedCutRod(profit, profit.Length);
            watch1.Stop();
            var MemCutRodMs = watch1.ElapsedMilliseconds;
            Console.WriteLine("Optimal Solution is:{0}", result1);
            Console.WriteLine("The time required for MemoizedCutRod function is : {0} milliseconds", MemCutRodMs);

            var watch2 = System.Diagnostics.Stopwatch.StartNew();
            int result2 = BottomUpCutRod(profit, profit.Length);
            watch2.Stop();
            var BottomUpCutRodMs = watch2.ElapsedMilliseconds;
            Console.WriteLine("Optimal Solution is:{0}", result2);
            Console.WriteLine("The time required for BottomUpCutRod function is : {0} milliseconds", BottomUpCutRodMs);







            Console.ReadLine();
        }

        static int CutRod(int[] profit, int n)
        {
            if (n == 0) // first element is 0
                return 0;

            int q = int.MinValue;

            for (int i = 1; i <= n; i++)
            {
                Console.WriteLine("Calculating for {0},{1}", i, n);
                q = Math.Max(q, profit[i - 1] + CutRod(profit, n - i));
            }

            //Console.WriteLine("N={0}, Q={1}", n, q);
            Console.WriteLine();

            return q;
        }

        static int MemoizedCutRod(int[] profit, int n)
        {
            int[] r = new int[n];
            for (int i = 0; i < n; i++)
            {
                Console.WriteLine("Calculating for {0},{1}", i, n);
                r[i] = int.MinValue;
            }

            return MemoizedCutRodAux(profit, r, n);
        }

        static int MemoizedCutRodAux(int[] profit, int[] r, int n)
        {
            if (n > 0 && r[n - 1] >= 0)
                return r[n - 1];

            int q = int.MinValue;

            if (n == 0)
            {
                q = 0;
                return 0;
            }
            else
            {
                for (int i = 1; i <= n; i++)
                    q = Math.Max(q, profit[i - 1] + MemoizedCutRodAux(profit, r, n - i));
            }

            r[n - 1] = q;

            return q;
        }

        static int BottomUpCutRod(int[] profit, int n)
        {
            int[] r = new int[n + 1];
            r[0] = 0;

            for (int j = 1; j <= n; j++)
            {
                Console.WriteLine("Calculating for {0},{1}", j, n);
                int q = int.MinValue;
                for (int i = 1; i <= j; i++)
                {
                    q = Math.Max(q, profit[i - 1] + r[j - i]);
                }
                r[j] = q;
            }

            return r[n];
        }
    }
}
